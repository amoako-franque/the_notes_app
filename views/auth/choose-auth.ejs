<div class="auth-container">
  <div class="auth-card">
    <div class="text-center mb-5">
      <h2 class="display-5 fw-bold mb-2"><%= action === 'login' ? 'Welcome Back' : 'Get Started' %></h2>
      <p class="text-muted fs-5"><%= action === 'login' ? 'Sign in to your account' : 'Create your account to start taking notes' %></p>
    </div>

    <div class="auth-options">
      <% if (typeof hasGoogleAuth !== 'undefined' && hasGoogleAuth) { %>
      <a href="/auth/google" class="google-auth-btn">
        <svg width="20" height="20" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
          <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
          <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
          <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
        </svg>
        <span><%= action === 'login' ? 'Sign in with Google' : 'Sign up with Google' %></span>
      </a>
      <% } %>

      <div class="auth-divider">
        <span>OR</span>
      </div>

      <a href="<%= action === 'login' ? '/login' : '/register' %>" class="email-auth-btn">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M20 4H4C2.9 4 2.01 4.9 2.01 6L2 18C2 19.1 2.9 20 4 20H20C21.1 20 22 19.1 22 18V6C22 4.9 21.1 4 20 4ZM20 8L12 13L4 8V6L12 11L20 6V8Z" fill="currentColor"/>
        </svg>
        <span><%= action === 'login' ? 'Sign in with Email' : 'Sign up with Email' %></span>
      </a>
    </div>

    <div class="text-center mt-5 pt-4 border-top">
      <% if (action === 'login') { %>
        <p class="text-muted mb-0">Don't have an account? <a href="/auth/choose" style="color: var(--accent-color); font-weight: 600;">Sign up</a></p>
      <% } else { %>
        <p class="text-muted mb-0">Already have an account? <a href="/auth/choose?action=login" style="color: var(--accent-color); font-weight: 600;">Sign in</a></p>
      <% } %>
    </div>
  </div>
</div>

