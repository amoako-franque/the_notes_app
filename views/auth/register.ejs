<div class="auth-container">
  <div class="auth-card">
    <h2 class="text-center mb-4">Create Account</h2>
    <p class="text-center text-muted mb-4">Sign up with your email and password</p>

    <% if (errors && errors.length > 0) { %>
      <% errors.forEach(error => { %>
        <div class="alert alert-danger"><%= error.msg %></div>
      <% }); %>
    <% } %>

    <form action="/register" method="POST" class="mt-4">
      <div class="row mb-3">
        <div class="col-md-6">
          <label for="firstName" class="form-label">First Name</label>
          <input
            type="text"
            class="form-control"
            id="firstName"
            name="firstName"
            value="<%= formData.firstName || '' %>"
            required
          >
        </div>
        <div class="col-md-6">
          <label for="lastName" class="form-label">Last Name</label>
          <input
            type="text"
            class="form-control"
            id="lastName"
            name="lastName"
            value="<%= formData.lastName || '' %>"
            required
          >
        </div>
      </div>

      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input
          type="email"
          class="form-control"
          id="email"
          name="email"
          value="<%= formData.email || '' %>"
          required
        >
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          class="form-control"
          id="password"
          name="password"
          minlength="6"
          required
        >
        <small class="text-muted">Must be at least 6 characters</small>
      </div>

      <div class="mb-3">
        <label for="confirmPassword" class="form-label">Confirm Password</label>
        <input
          type="password"
          class="form-control"
          id="confirmPassword"
          name="confirmPassword"
          minlength="6"
          required
        >
      </div>

      <button type="submit" class="btn btn-primary w-100 mb-3">Create Account</button>
    </form>

    <div class="auth-divider">
      <span>OR</span>
    </div>

    <% if (typeof hasGoogleAuth !== 'undefined' && hasGoogleAuth) { %>
    <a href="/auth/google" class="btn btn-outline-primary w-100">
      <i class="bi bi-google me-2"></i> Sign up with Google
    </a>
    <% } %>

    <div class="text-center mt-4">
      <p class="text-muted">Already have an account? <a href="/login" style="color: var(--accent-color);">Sign in</a></p>
    </div>
  </div>
</div>

