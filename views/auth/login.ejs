<div class="auth-container">
  <div class="auth-card">
    <div class="auth-header text-center mb-5">
      <h2 class="display-5 fw-bold mb-2">Welcome Back</h2>
      <p class="text-muted fs-5 mb-0">Sign in to continue to your notes</p>
    </div>

    <% if (errors && errors.length > 0) { %>
      <% errors.forEach(error => { %>
        <div class="alert alert-danger mb-4">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" style="margin-right: 0.5rem; vertical-align: middle;">
            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z" fill="currentColor"/>
          </svg>
          <%= error.msg %>
        </div>
      <% }); %>
    <% } %>

    <!-- Auth Method Buttons (Hidden if form is shown) -->
    <div class="auth-options" id="authOptions" style="display: <%= (errors && errors.length > 0) ? 'none' : 'flex' %>;">
      <% if (typeof hasGoogleAuth !== 'undefined' && hasGoogleAuth) { %>
      <a href="/auth/google" class="google-auth-btn">
        <svg width="20" height="20" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
          <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
          <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
          <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
        </svg>
        <span>Sign in with Google</span>
      </a>
      <% } %>

      <div class="auth-divider">
        <span>OR</span>
      </div>

      <button type="button" class="email-auth-btn" onclick="showCredentialsForm()">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M20 4H4C2.9 4 2.01 4.9 2.01 6L2 18C2 19.1 2.9 20 4 20H20C21.1 20 22 19.1 22 18V6C22 4.9 21.1 4 20 4ZM20 8L12 13L4 8V6L12 11L20 6V8Z" fill="currentColor"/>
        </svg>
        <span>Sign in with Email</span>
      </button>
    </div>

    <!-- Credentials Form (Hidden by default, shown if errors exist) -->
    <div id="credentialsForm" style="display: <%= (errors && errors.length > 0) ? 'block' : 'none' %>;">
      <!-- Show Google button above form if form is visible -->
      <% if (typeof hasGoogleAuth !== 'undefined' && hasGoogleAuth) { %>
      <a href="/auth/google" class="google-auth-btn mb-4">
        <svg width="20" height="20" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
          <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
          <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
          <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
        </svg>
        <span>Sign in with Google</span>
      </a>

      <div class="auth-divider mb-4">
        <span>OR</span>
      </div>
      <% } %>

      <form action="/login" method="POST" class="login-form">
        <div class="form-group">
          <label for="email" class="form-label">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" style="margin-right: 0.5rem; vertical-align: middle;">
              <path d="M20 4H4C2.9 4 2.01 4.9 2.01 6L2 18C2 19.1 2.9 20 4 20H20C21.1 20 22 19.1 22 18V6C22 4.9 21.1 4 20 4ZM20 8L12 13L4 8V6L12 11L20 6V8Z" fill="currentColor"/>
            </svg>
            Email Address
          </label>
          <input
            type="email"
            class="form-control form-control-lg"
            id="email"
            name="email"
            value="<%= formData.email || '' %>"
            placeholder="Enter your email"
            required
            autofocus
          >
        </div>

        <div class="form-group">
          <label for="password" class="form-label">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" style="margin-right: 0.5rem; vertical-align: middle;">
              <path d="M18 8h-1V6c0-2.76-2.24-5-5-5S7 3.24 7 6v2H6c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V10c0-1.1-.9-2-2-2zM12 17c-1.1 0-2-.9-2-2s.9-2 2-2 2 .9 2 2-.9 2-2 2zm3.1-9H8.9V6c0-1.71 1.39-3.1 3.1-3.1 1.71 0 3.1 1.39 3.1 3.1v2z" fill="currentColor"/>
            </svg>
            Password
          </label>
          <input
            type="password"
            class="form-control form-control-lg"
            id="password"
            name="password"
            placeholder="Enter your password"
            required
          >
        </div>

        <button type="submit" class="btn-submit">
          <span>Sign In</span>
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M13 7l5 5-5 5M6 12h12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
      </form>
    </div>

    <div class="auth-footer text-center mt-5 pt-4">
      <p class="text-muted mb-0">
        Don't have an account?
        <a href="/register" class="auth-link">Create one</a>
      </p>
    </div>
  </div>
</div>

<script>
function showCredentialsForm() {
  document.getElementById('credentialsForm').style.display = 'block';
  document.getElementById('authOptions').style.display = 'none';
  document.getElementById('email').focus();
}
</script>

