<div class="auth-container">
  <div class="auth-card">
    <h2 class="text-center mb-4">Sign In</h2>
    <p class="text-center text-muted mb-4">Login to your account</p>

    <% if (errors && errors.length > 0) { %>
      <% errors.forEach(error => { %>
        <div class="alert alert-danger"><%= error.msg %></div>
      <% }); %>
    <% } %>

    <form action="/login" method="POST" class="mt-4">
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input
          type="email"
          class="form-control"
          id="email"
          name="email"
          value="<%= formData.email || '' %>"
          required
          autofocus
        >
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          class="form-control"
          id="password"
          name="password"
          required
        >
      </div>

      <button type="submit" class="btn btn-primary w-100 mb-3">Sign In</button>
    </form>

    <div class="auth-divider">
      <span>OR</span>
    </div>

    <% if (typeof hasGoogleAuth !== 'undefined' && hasGoogleAuth) { %>
    <a href="/auth/google" class="btn btn-outline-primary w-100">
      <i class="bi bi-google me-2"></i> Sign in with Google
    </a>
    <% } %>

    <div class="text-center mt-4">
      <p class="text-muted">Don't have an account? <a href="/register" style="color: var(--accent-color);">Sign up</a></p>
    </div>
  </div>
</div>

